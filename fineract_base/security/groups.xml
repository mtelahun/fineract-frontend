<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">

    <record id="group_fineract_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="fineract_base.module_category_fineract" />
        <field name="users" eval="[(4, ref('base.user_root'))]" />
        <field name="comment">the user will administer the
            Fineract front-end</field>
    </record>

    <record id="group_fineract_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="fineract_base.module_category_fineract" />
        <field name="users" eval="[(4, ref('base.user_root'))]" />
        <field name="comment">
            if the user has Fineract credentials the user is able to access Odoo modules related to
            Fineract
        </field>
    </record>

    <record id="fineract_user_rule_own" model="ir.rule">
        <field name="name">Fineract User: Own only</field>
        <field name="model_id" ref="model_fineract_user" />
        <field name="domain_force">
            [('odoo_user_id', '=', user.id)]
        </field>
        <field name="groups" eval="[(4, ref('fineract_base.group_fineract_user'))]" />
    </record>

</odoo>
